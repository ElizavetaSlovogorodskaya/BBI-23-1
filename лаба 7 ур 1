using System;

public abstract class RadioPoll
{
    protected string _answer;
    protected int _count;
    public string Answer { get { return _answer; } }
    public int Count { get { return _count; } }
    public RadioPoll(string answer, int count)
    {
        _answer = answer;
        _count = count;
    }
}
class Man : RadioPoll
{
    public Man(string answer, int count) : base(answer, count)
    {
        _answer = answer;
        _count = count;
    }
}
class Opening : RadioPoll
{
    public Opening(string answer, int count) : base(answer, count)
    {
        _answer = answer;
        _count = count;
    }
}


class Program
{
    static void Main()
    {
        Man[] mans = new Man[5]
            {
                new Man("Эльон Маск", 120),
                new Man("Грета Тунберг", 90),
                new Man("Владимир Путин", 80),
                new Man("Джо Байден", 70),
                new Man("Анджелина Джоли", 60),
            };

        Opening[] openings = new Opening[5]
            {
                new Opening("The sunken ship Endurance", 70),
                new Opening("Artificial intelligence", 90),
                new Opening("Brain Decoder", 110),
                new Opening("The Ancient Whale", 50),
                new Opening("Living robot", 80),
            };

        Sort(mans);

        Sort(openings);

        int totalVotes = 0;

        foreach (var man in mans)
        {
            totalVotes += man.Count;
        }
        foreach (var opening in openings)
        {
            totalVotes += opening.Count;
        }
        static void Sort(RadioPoll[] mans) // converts any heir class to the base / преобразует любой класс-наследник в базовый
        {
            for (int i = 0; i < mans.Length - 1; i++) // from 1 to n-1
            {
                for (int j = i + 1; j < mans.Length; j++) // from next to n
                {
                    if (mans[i].Count > mans[j].Count)
                    {
                        RadioPoll t = mans[i];
                        mans[i] = mans[j];
                        mans[j] = t;
                    }
                }
            }
        }
        Console.WriteLine("Топ-5 человек года по результатам опроса:");

        foreach (var man in mans)
        {
            double percentage = (double)man.Count / totalVotes * 100;
            Console.WriteLine($"Ответ: {man.Answer} - {percentage:f2}% от общего количества ответов");
        }

        Console.WriteLine();

        Console.WriteLine("Топ-5 открытий года по результатам опроса:");

        foreach (var opening in openings)
        {
            double percentage = (double)opening.Count / totalVotes * 100;
            Console.WriteLine($"Ответ: {opening.Answer} - {percentage:f2}% от общего количества ответов");
        }
    }
}
